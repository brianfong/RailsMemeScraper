<p id="notice"><%= notice %></p>

<h1>Memes</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @memes.where("stickied=false").order("id ASC").each do |meme| %>
      <tr>
        <td><%= meme.author %></td>
        <td><a href="https://www.reddit.com/<%= meme.permalink %>"><%= meme.title %></a></td>
        <td><img src="<%= meme.url %>" alt="<%= meme.title %>" height="42" width="42"></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Meme Carousel", "/carousel/new" %>
